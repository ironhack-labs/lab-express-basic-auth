<div>
  <form action="/auth/login" method="POST" id="form">
    <input type="text" name="userName" placeholder="Your Name">
    <input id="myPassword" type="password" name="password">
    <input type="submit" value="login">
    {{#if message}}
    <p>{{errorMessage}}</p>
    {{/if}}
  </form>
</div>