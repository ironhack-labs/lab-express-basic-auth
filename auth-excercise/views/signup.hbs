<h1>Sign up</h1>

<form method="POST" action="/auth/signup">

  <div class="field">
    <label>Username</label>
    <input type="text" name="username" />
  </div>

  <div class="field">
    <label>Password</label>
    <input type="text" name="password" />
  </div>

  <div class="field submit">
    <button type="submit">Sign up</button>
  </div>
</form>