<form id="form" action="/auth/signup" method="POST">
    <h2>Sign up</h2>
    <label for="username">Username</label><br>
    <input
            type="text" name="username"
            placeholder="Enter your namne"
            value="{{ username }}"
            required
            maxlength="50"
    >

    <br><br>
    <label for="password">Password</label><br>
    <input
            type="password"
            id="passwordSignup"
            name="password"
            placeholder="Enter your password"
            value="{{ password }}"
            required
            minlength="8"
    >
    <br><br>

    {{#if errorMessage}}
        <div class="error-message">{{ errorMessage }}</div>
    {{/if}}

    <button>Create account</button>
    <p class="account-message">
        Do you already have an account? <a href="/auth/login">Login</a>
    </p>
    <p class="account-message">
        Return to home page: <a href="/">Click here</a>
    </p>
</form>