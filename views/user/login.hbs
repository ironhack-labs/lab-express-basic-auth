

<div id="form">
  <h2>login</h2>
  <form action="/login" method="POST">

    <label> Username
      <input type="text" name="username" placeholder="<username>" />
    </label>

    <label> Password
      <input type="password" name="password" placeholder="********" />
    </label>

    <button type="submit">login</button>

    {{#if errorMessage}}
      <p class="error">{{errorMessage}}</p>
    {{/if}}
  </form>
</div>