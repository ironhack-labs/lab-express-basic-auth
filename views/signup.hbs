<div class="container-fluid" id="signup">
  <h2>Sign In</h2>
  <form action="/signup" method="POST">
    <div class="col-lg-3">
        <div class="form-group">
            <label for="username-field">Username</label>
            <input class="form-control w-20 {{#if error.username}} is-invalid {{/if}}" type="text" id="input-username" value="{{user.username}}" name="username" placeholder="Enter username" />
               {{#if error.username}} 
                <div class="invalid-feedback">
                   {{error.username.message}}
                </div>
                {{/if}}
        </div>
        <div class="form-group">
            <label for="password-field">Password</label>
            <input class="form-control w-40 {{#if error.password}} is-invalid {{/if}}" type="password" name="password" id="password-field" placeholder="Enter password" />
             {{#if error.password}}
                <div class="invalid-feedback">
                    {{error.password.message}}
                </div>
            {{/if}}
        </div>
        <button class="btn btn-primary" type="submit">Sign In</button>
    </div>

  </form>
</div> 