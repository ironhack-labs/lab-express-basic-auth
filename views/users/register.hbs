<form class="container-sm mx-auto" style="" action="/register" method="POST">
<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header">
          Registrarse
        </div>
        <div class="card-body">
          <form id="registerForm">
            <div class="form-group">
              <label for="email">Correo Electrónico:</label>
              <input type="email" class="form-control" id="email" autocomplete="email" name="email" required>
            </div>
            <div class="form-group">
              <label for="password">Contraseña:</label>
              <input type="password" class="form-control" id="password" name="password" required>
            </div>
            <button type="submit" class="btn btn-primary mt-3" onclick="register()">Registrarse</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
</form>