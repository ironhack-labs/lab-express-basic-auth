<h3 style="font-weight:100; margin-left:300px;">SIGN UP</h3>
<div class="col-sm-6">
    <form method="POST" action="/sessions/create" data-errors='{{{ json errors }}}'>
        <div class="form-group">
            <label for="formGroupExampleInput">Username</label>
            <input type="text" class="form-control" {{#if errors}}style="border:1px solid red;"{{/if}} placeholder="Username" name="username" id="username">
        </div>
        <div class="form-group">
            <label for="formGroupExampleInput2">Password</label>
            <input type="password" class="form-control"  {{#if errors}} style="border:1px solid red;"{{/if}} placeholder="Password" name="password" id="password">
        </div>
        <button type="submit" class="btn btn-primary">Log in</button>
    </form>
    <a href="/users/create">or register</a>
</div>
{{user}}