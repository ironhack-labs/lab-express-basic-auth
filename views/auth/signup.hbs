<div id="form">
    <h2>Signup</h2>

    <form action="/auth/signup" method="POST">

        <label> New Username
            <input type="username" name="username" placeholder="Write your username here" />
        </label>

        <label> New Password
            <input type="password" name="password" placeholder="********" />
        </label>

        <button type="submit">Signup</button>

        {{#if errorMessage}}
        <p class="error">{{errorMessage}}</p>
        {{/if}}
    </form>
</div>