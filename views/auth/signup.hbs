<h1>Signup page</h1>

<div id="form">
  <h2>Signup</h2>
  <form action="/signup" method="POST">

    <label>
      Username
      <input type="text" name="username" placeholder="ironhacker" required />
    </label>

    <label>
      Password
      <input type="password" name="password" placeholder="********" required />
    </label>

    <button type="submit">Create account</button>

    {{#if errorMessage}}
      <p style="color:red;">{{errorMessage}}</p>
    {{/if}}
  </form>
</div>