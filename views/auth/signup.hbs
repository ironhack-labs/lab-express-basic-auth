<div id="form">
  <h2>Signup</h2>
  <form action="/signup" method="post">
    <label> Username
      <input type="text" name="username" placeholder="chicomacareu" />
    </label>
    <label> Password
      <input type="password" name="password" placeholder="******" />
    </label>
    <button type="submit">Create Account</button>
  </form>
  {{#if errorMessage}}
  <p class="error">{{errorMessage}}</p>
  {{/if}}
</div>