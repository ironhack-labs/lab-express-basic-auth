<div id='form'>
	<h2>Signup</h2>
	<form action='/signup' method='POST'>

		<label for='username'>
			Username
			<input required type='text' name='username' placeholder='ironhacker' id='username' />
		</label>

		<label for='password'>
			Password
			<input required type='password' name='password' placeholder='********' minlength='6' id='password' />
		</label>

		<button type='submit'>Create account</button>

		{{! error message will be added here }}

		{{#if errorMessage}}
			<p class='error'>{{errorMessage}}</p>
		{{/if}}
	</form>
</div>