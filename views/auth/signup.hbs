<div id="signup">
  <h2>Signup</h2>
<div>
  {{errorMessage}}
</div>

  <form action="/auth/signup" method="POST">
    <label for="input-username"> Username </label>
    <input type="text" name="username" placeholder="Your username" required/>
 
    <label for="input-email"> Email </label>
    <input type="email" id="input-email" name="email" placeholder="Your email" />
 
 
    <label for="input-passwordHash"> Password </label>
    <input type="password" name="passwordHash" id="input-passwordHash" placeholder="********" />
 
    <button type="submit">Create account</button>
 
    {{!-- error message will be added here --}}
  </form>
</div>
