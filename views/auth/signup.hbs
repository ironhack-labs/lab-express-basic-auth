<div class="wrapper">
    <h2>User Sign-up</h2>
    <section class="form-section">
        <form action="/signup" method="POST">
            {{#if errorMessage}}
                <p class="error-message">{{errorMessage}}</p>
            {{/if}}
            <label class="form-label" for="username"> Username: </label>
            <div>
                <input 
                    class="form-field" 
                    id="username" 
                    placeholder="username" 
                    type="text" 
                    name="username"
                />
            </div>

            <label class="form-label" for="password"> password: </label>
            <div>
                <input
                    class="form-field" 
                    id="password" 
                    placeholder="password" 
                    type="password"
                    name="password"
                />
            </div>

            <div>
                <button class="pet-form-button" type="submit">Sign-up</button>
            </div>
        </form>
    </section>
</div>