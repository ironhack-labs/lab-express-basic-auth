<div id="signup-form">


    <h2>Sign up</h2>
    <form action="/signup" method="post">
        <label> Username 
            <input type="text" name="username" placeholder="username"/>   
        </label>
        <label> Password 
            <input type="password" name="password" placeholder="********"/>   
        </label>
        <button type="submit">Create Account</button>
        {{#if errorMessage}}
            <p class="error">{{errorMessage}}</p>
        {{/if}}
    </form>
</div>