{{! views/auth/signup.hbs }}

<div id="form">
  <h2>Signup</h2>
  <form action="/signup" method="POST">

    <label>
      Username
      <input
        type="text"
        name="username"
        placeholder="Username Here"
        value="Sesmas"
        required
      />
    </label>

    <label>
      Password
      <input
        type="password"
        name="password"
        placeholder="********"
        value="Charlie1234#"
        required
        minlength="8"
      />
    </label>

    <button type="submit">Create account</button>

    {{! error message will be added here }}
    {{#if errorMessage}}
      <p
        style="background-color: red; padding: 25px; color: white;"
      >{{errorMessage}}</p>
    {{/if}}

  </form>
</div>