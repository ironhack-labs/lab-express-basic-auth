<div id="form">
  <h2>Signup</h2>
  <form action="/signup" method="POST">
      
      <label> username
      <input type="text" name="username"  />

    </label>
  
    <label> Password
      <input type="password" name="password" placeholder="********" />
    </label>
 
    <button type="submit">Create account</button>
 
    {{#if errorMessage}}
      <p class="error">{{errorMessage}}</p>
    {{/if}}
  </form>
</div>

