<div class="row justify-content-center mt-4">
  <div class="col col-sm-8 col-md-6 col-lg-4">
    
    <form action="/register" method="post">
      <div class="input-group mb-2">
        <input
          type="text"
          name="name"
          class="custom-form-control form-control py-2 ps-4 {{#if errors.name}}is-invalid{{/if}}"
          placeholder="Name"
          aria-label="User name"
          value="{{ user.name }}"
        >
        {{#if errors.name}}<div class="invalid-feedback">{{ errors.name }}</div>{{/if}}
      </div>

      <div class="input-group mb-2">
        <input
          type="text"
          name="email"
          class="custom-form-control form-control py-2 ps-4 {{#if errors.email}}is-invalid{{/if}}"
          placeholder="Email: user@example.org"
          aria-label="User email"
          value="{{ user.email }}"
        >
        {{#if errors.email}}<div class="invalid-feedback">{{ errors.email }}</div>{{/if}}
      </div>

      <div class="input-group mb-3">
        <input
          id="password-input"
          type="password"
          name="password"
          class="custom-form-control form-control py-2 ps-4 {{#if errors.password}}is-invalid{{/if}}"
          placeholder="Password"
          aria-label="User password"
        >
        <button class="btn btn-outline-secondary password-toggle c-dark" type="button">
          <i id="password-icon" class="fa fa-eye-slash fa-fw"></i>
        </button>
        {{#if errors.password}}<div class="invalid-feedback">{{ errors.password }}</div>{{/if}}
      </div>

      <div class="d-grid gap-2">
        <button type="submit" class="btn btn-primary bg-light-green border-0">Register</button>
