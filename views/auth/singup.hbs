<div id="form">
  <h2>Signup</h2>
  <form action="/signup" method="POST">
 
    <label> Email
      <input type="email" name="email" placeholder="seeyaindahell@idontlikeyou.com" />

    </label>
 
   
 
    <label> Password
      <input type="password" name="password" placeholder="********" />
    </label>
 
    <button type="submit">Create account</button>
 
    {{#if errorMessage}}
      <p class="error">{{errorMessage}}</p>
    {{/if}}
  </form>
</div>

<h1>{{userInSession.email}} user</h1>