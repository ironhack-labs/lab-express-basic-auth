<div class="row justify-content-center align-items-center" style="height: 100vh;">
  <div class="col col-sm-8 col-md-6 col-lg-4 mb-5">
        <form action="/login" method="POST">            
            <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label">Email address</label>
                <input type="email" class="form-control {{#if errors.email}}is-invalid{{/if}} {{#if errors.emailExist}}is-invalid{{/if}}" id="exampleInputEmail1" aria-describedby="emailHelp" name="email">
                <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
                {{#if errors.email}}<div class="invalid-feedback">{{errors.email}}</div>{{/if}}
            </div>

            <div class="mb-3">
                <label for="exampleInputPassword1" class="form-label">Password</label>
                <input type="password" class="form-control {{#if errors.password}}is-invalid{{/if}}" id="exampleInputPassword1" name="password">
                {{#if errors.password}}<div class="invalid-feedback">{{errors.password}}</div>{{/if}}
            </div>
        
            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-primary bg-light-green border-0">Log in</button>
            </div>
        </form>
  </div>
</div>