<div class="container">

  <div class="row justify-content-center">

    <div class="col-md-6">

      <h1>Inicio de sesión</h1>

      <form action="/inicio-sesion" method="POST">
        <div class="mb-3">
          <label for="usernameInput" class="form-label">Nombre de usuario</label>
          <input
            type="text"
            class="form-control"
            id="usernameInput"
            name="username"
          />
        </div>
        <div class="mb-3">
          <label for="pwdInput" class="form-label">Contraseña</label>
          <input
            type="password"
            class="form-control"
            id="pwdInput"
            name="userPwd"
          />
        </div>

        <div class="d-grid gap-2">
          <button type="submit" class="btn btn-outline-dark">Acceder</button>
        </div>

        {{#if errorMessage}}
          <div id="error">
            <p>{{errorMessage}}</p>
          </div>
        {{/if}}

      </form>
    </div>
  </div>

</div>