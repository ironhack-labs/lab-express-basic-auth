<div class="container">

    <div class="row justify-content-center">

        <div class="col-md-6">

            <h1>Inicia sesión</h1>

            <form action="/signup" method="POST">

                <div class="form-group">
                    <label for="userInput">Nombre de usuario</label>
                    <input type="text" class="form-control" id="userInput" name="username">

                </div>

                <div class="form-group">
                    <label for="pwdInput">Contraseña</label>
                    <input type="password" class="form-control" id="pwdInput" name="userPwd">
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-dark">Iniciar sesion</button>
                </div>

                {{#if errorMessage}}
                <div id="error">
                    <p>{{errorMessage}}</p>
                </div>
                {{/if}}


            </form>
        </div>
    </div>
</div>