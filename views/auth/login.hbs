<div class="content-center">
<h2>Login Page</h2>
<div class="content-center">
    <form id="login-page" action="/login" method="post">
        <label>Username:
            <input type="text" name="username" placeholder="ex: ironhacker"></label>
        <label><span>.</span>Password:
            <input type="password" name="password" placeholder="************"></label>
        <button type="submit">Login</button>
    {{#if errorMessage}}
      <p class="error" style="color: red;">{{errorMessage}}</p>
    {{/if}}
    </form>
</div>
</div>