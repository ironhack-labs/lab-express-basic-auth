<div class="container">
    <div class="row">
        <h1 class="mt-5 ms-5">Hi there!‚úåüèº </h1> </br>
        <h6 class="mb-5 ms-5">Please log in to your account</h6>
        <div class="col-4">
            <form class="mx-1 mx-md-4" action="/auth/login" method="post">
                <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                        <input type="text" name="username" id="form3Example3c" class="form-control" required />
                        <label class="form-label" for="form3Example3c">Username</label>
                    </div>
                </div>

                <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                        <input type="password" name="password" id="form3Example4c" class="form-control" required />
                        <label class="form-label" for="form3Example4c">Password</label>
                    </div>
                </div>
                <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                    <button type="submit" class="btn btn-primary btn-lg">Log In</button>
                </div>
                {{#if message}}
                <p class="errorMsg">{{message}}</p>
                {{/if}}
        </div>
        </form>
    </div>
</div>