{{! views/auth/login.hbs }}

<div id="form">
  <h2>Login</h2>

  <form action="/login" method="post">
    <label>
      Username</label>
    <input type="text" name="username" />

    <label>
      Password
    </label>
    <input type="password" name="password" />

    <button type="submit">Login</button>

    {{#if errorMessage}}
      <p class="error">{{errorMessage}}</p>
    {{/if}}
  </form>
</div>