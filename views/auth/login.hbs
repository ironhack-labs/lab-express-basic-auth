<h2>Login</h2>
<form action="/login" method="POST">
    <label>Username:
        <input type="text" id="username" name="username" placeholder"Enter your name">
    </label>
    <label>
        Password:
        <input type="text" id="password" name="password" placeholder="******">
    </label>
    <button type="submit">Login</button>
</form>
{{#if error}}
<h2>{{error}}</h2>
{{/if}}