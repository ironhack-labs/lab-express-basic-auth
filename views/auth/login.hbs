<div id="form">
  <h2>Login</h2>
  <form action="/login" method="POST">
  <label>
      Username
      <input type="text" name="username" placeholder="ironhacker" />
    </label>
    <label>
      Password
      <input type="password" name="password" placeholder="********" />
    </label>
    <button type="submit">Login to your account</button>
  </form>
  {{#if error}}
    <h2> {{error}} </h2>
  {{/if}}
</div>