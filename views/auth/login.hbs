<div class="form">
  <h2>Log In</h2>
  
  <form action="/login" method="POST">
    <label> Username
      <input type="text" name="username" placeholder="Ironhacker" required="required"/>
    </label>

    <label>Password
      <input type="password" name="password" placeholder="********" required="required"/>
    </label>

    <button type="submit">Login</button>

    {{#if errorMessage}}
      <p class="error">{{errorMessage}}</p>
    {{/if}}
  </form>
</div>