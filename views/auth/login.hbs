<div id="form">
  <h2>Login</h2>

  <form action="/login" method="POST">

    <label for="username">Username</label>
    <input type="text" name="username" />

    <label>Password
      <input type="password" name="password" />
    </label>

    <button type="submit">Login</button>

    {{#if errorMessage}}
      <p class="error">{{errorMessage}}</p>
    {{/if}}
  </form>
</div>