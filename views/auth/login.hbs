<h1>Login </h1>

<form action="/auth/login" method="post">
  <input
    type="username"
    name="username"
    value=""
    placeholder="Enter your username"
  />
  <input
    type="password"
    name="password"
    value=""
    placeholder="Enter your password"
  />
  <input type="submit" value="Login" />

</form>

{{#if error}}
  <h2 style="color: red">{{error}}</h2>
{{/if}}