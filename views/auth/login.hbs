<h2>Login</h2>
<form action="/login" method="post">
	<label>
		E-mail
		<input type="email" name="email" placeholder="chicomacareu@gmail.com" />
	</label>
	<label>
		Password
		<input type="password" name="password" placeholder="*******" />
	</label>
	<button type="submit">Login</button>

	{{#if errorMessage}}
		<p class="error">{{errorMessage}}</p>
	{{/if}}
</form>