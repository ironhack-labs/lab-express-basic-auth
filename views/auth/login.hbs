
{{> navbar}}
<div class="container">
    <h2>Login</h2>
    <div id="form" class="d-flex justify-content-center mt-3">
        <form action="/login" class="form-group w-50" method="POST">
            <label for="input-email" class="mt-3">Email</label>
            <input type="email" id="input-email" class="form-control" name="email" placeholder="Your email" required/>
            <label for="input-password" class="mt-3">Password</label>
            <input type="password" name="password" id="input-password" class="form-control" placeholder="********" required/>
            <button type="submit" class="btn btn-primary mt-3">Login</button>
            {{#if errorMessage}}
            <p class="error">{{errorMessage}}</p>
            {{/if}}
        </form>
    </div>
</div>

