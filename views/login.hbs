<div id='form'>
  <h2>Login</h2>

  <form action='/login' method='POST'>

    <label>
      Username
      <input type='username' name='username' placeholder='Your username' />
    </label>

    <label>Password
      <input type='password' name='password' placeholder='********' />
    </label>

    <button type='submit'>Login</button>

    {{#if err}}
      <p>{{err}}</p>
    {{/if}}
  </form>
</div>