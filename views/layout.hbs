<!DOCTYPE html>
<html>
  <head>
    <title>Auth</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <nav>
      {{#if messages.info}}
        <p>{{messages.info}}</p>
      {{/if}}
    </nav>
    {{#if currentUser}}
      <p>Hello {{currentUser.username}}</p>
      <form action="/auth/logout" method="POST">
        <button type="submit" value="logout">Log out</button>
      </form>
    {{/if}}
    {{{body}}}
  </body>
</html>
