<form method= "POST" action="/new">
  <div class="mb-3">
    <label for="exampleInputEmail1" class="form-label">Email address</label>
    <input type="email" name="email" class="form-control {{#if errorMessage}}is-invalid{{/if}}" id="exampleInputEmail1" aria-describedby="emailHelp" {{#if errorMessage}}value="{{email}}"{{/if}}required>
    <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
  </div>
  <div class="mb-3">
    <label for="exampleInputPassword1" class="form-label">Password</label>
    <input type="password" name="password" class="form-control {{#if errorMessage}}is-invalid{{/if}}" id="exampleInputPassword1" required>
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>
{{#if errorMessage}}
    <p>{{errorMessage}}</p>
{{/if}}