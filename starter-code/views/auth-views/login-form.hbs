<h2>Log In</h2>

{{> flash_messages}}

<form action="/process-login" method="POST">
  <label>
    Username (2 characters or more):
    <input type="text" name="userName" placeholder="Kylo" minlength="2" required />
  </label>

  <label>
    Password:
    <input type="password" name="originalPassword" placeholder="It's a secret" required />
  </label>
  <button>Log In</button>
</form>

