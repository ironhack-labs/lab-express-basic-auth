<div>
  {{#if errorMessage}}
  <div class="error-message">{{ errorMessage }}</div>
  {{/if}}
  <form id="form" action="/signup" method="POST">
    <label for="username">Username</label><br>
    <input type="text" name="username" placeholder="AnakinSkywalker" required>

    <br><br>
    <label for="password">Password</label><br>
    <input type="password" name="password" placeholder="DeathStar" id="myPassword" required>

    <br><br>

    <button>Create account</button>
  </form>
</div>