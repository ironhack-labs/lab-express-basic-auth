
<h1>Crea tu cuenta:</h1>

{{#if error}}
<p>{{error}}</p>

{{/if}}

<form validated action="/signup" method="post">

    <p>
        Nombre de usuario:
        <input value="{{username}}" type="email" name="username" required>
    </p>

    <p>
        Password:
        <input type="password" name="password" id="myPassword" required>
    </p>

    <p>
        Password:
        <input type="password" name="password2" required>
    </p>
<p>
    <input type="submit">
</p>
</form>