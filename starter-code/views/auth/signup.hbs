<div class="signup">
<form method="POST" class="w-75 mx-auto mt-5">
  {{#if errorMessage}}
    <div class="text-right">
      <span class="p-3 border border-danger error-msg">{{errorMessage}}</span>
    </div>
  {{/if}}
  <div class="row justify-content-center">
    <div class="col-md-4 col-12">
      <div class="form-group mr-2">
      <label for="firstName">First Name</label>
      <input type="text" class="form-control" id="lastName" aria-describedby="lastNameHelp" placeholder="Alejandro" required="true" name="firstName">            
    </div>
    </div>
    <div class="col-md-4 col-12">
      <div class="form-group mr-2">
        <label for="lastName">Last Name</label>
        <input type="text" class="form-control" id="lastName" aria-describedby="lastNameHelp" placeholder="Garcia" required="true" name="lastName">
      </div>
    </div>
    <div class="col-md-4 col-12">
      <div class="form-group">
        <label for="zipCode">Zip Code</label>
        <input type="zipCode" class="form-control" id="zipCode" placeholder="28045" required="true" name="zipCode">
      </div>
    </div>  
  </div>
  <div class="row justify-content-center">
    <div class="col-md-6 col-12">
      <div class="form-group">
        <label for="exampleInputEmail1">Email address</label>
        <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="alejandro@garcia.ironhacker" required="true" name="username">
      </div>
    </div>
    <div class="col-md-6 col-12">
      <div class="form-group">
        <label for="exampleInputPassword1">Password</label>
        <input type="password" class="form-control" id="exampleInputPassword1" placeholder= "1234" required="true" name="password">
      </div>
    </div>  
  </div>
  <div class="row justify-content-center mt-5">
    <button type="submit" class="btn btn-success btn-lg">Register</button>
  </div>
  <small id="emailHelp" class="form-text text-center mt-2">We will never reveal your data!! muahaha ğŸ”¥</small>
</form>
</div>