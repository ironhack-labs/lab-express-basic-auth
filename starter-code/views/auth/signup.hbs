<div class="form-container">
    <form action="/auth/signup" method="post" class="form">
        <h3 class="title">Signup</h3>
        <label for="username">Username</label><br>
        <input class="input" name="username" type="text"><br><br>

        <label for="password">Password</label><br>
        <input class="input" name="password" type="password"><br><br>
        <a>Show Password</a><br><br>
        <button class="btn">Create Account</button><br><br>
        <p>Already have an account? <a href="/auth/signin">Login</a></p>
    </form>
    {{#if error}}
        <p class="msg-error">{{error}}</p>
    {{/if}}
</div>