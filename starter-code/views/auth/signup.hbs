<form id="form" action="/signup" method="POST">
  <label for="username">Username</label><br>
  <input type="text" name="username" required>
  <label for="password">Password</label><br>
  <input type="password" name="password" required minlength="6" maxlength="16">
  {{#if errorMessage}}
    <div class="error-message">{{ errorMessage }}</div>
  {{/if}}
  <button>Create Acount</button>
  {{{captacha}}}
    <div class="custom-class-for-recaptcha" data-siteKey="6Lccdo8UAAAAAIhKr0zf4bYmjcQ09r6QKzkoGd61">
  {{{captcha}}}    
    </div>
  <p class="account-message">Already have an account? <a href="/login">Log in</a></p>
</form>