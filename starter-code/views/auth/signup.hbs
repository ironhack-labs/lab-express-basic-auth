{{!-- Grey Background Color --}}
<div class="bg-dark">
  <div class="container">
    <div class="row fullheight">
      {{!-- Card --}}
      <div class="col-12 col-md-5 m-auto">
        <div class="card p-5">
          <h1 class="mb-0 h3">Create an account</h1>
          <hr class="my-4 py-2">
          {{!-- Form --}}
          <form action="/signup" method="POST">
            {{!-- Username --}}
            <div class="form-group">
              <label for="username">Username</label>
              <input type="text" name="username" placeholder="superman123" class="form-control" id="username"
                required />
            </div>
            {{!-- Password --}}
            <div class="form-group">
              <label for="password">Password</label>
              <input type="password" name="password" placeholder="*******" class="form-control" id="password"
                required />
            </div>
            <div class="form-group">
              <div class="btn btn-block bg-warning text-center py-2 d-none" id="password-scale"></div>
            </div>
            {{!-- Buttons --}}
            <div class="d-flex justify-content-between align-items-center mt-5">
              <small class="text-muted">Already a user? <a href="/login" class="text-info text-decoration-none">Log
                  in</a></small>
              <div class="text-right">
                <button type="submit" class="btn btn-info text-bold">Sign up</button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<script src="/javascripts/passwordChecker.js"></script>