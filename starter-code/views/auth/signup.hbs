<form id="form" action="/signup" method="POST">
    <label for="username">Username</label>
    <br />

    <input type="text" name="username"  required placeholder="Your username" />

    <label for="password">Password</label>
    <br />

    <input type="password" name="password" pattern="(?=^.{8,}$)((?=.*\d)|(?=.*\W+))(?![.\n])(?=.*[A-Z])(?=.*[a-z]).*$" title="8 digitos, 1mayuscula, 1minuscula, 1numero y un caracter especial." placeholder="********" />

    <button type="submit">Create account</button>
</form>

{{#if errorMessage}}
<div class="error-message">{{ errorMessage}}</div>
{{/if}}
