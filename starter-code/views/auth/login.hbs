<div class="container">
  <div class="row border p-2">
    <h1 class="col-12 text-center py-2">LOG IN</h1>
    <div class="col-4 mx-auto">
      <form action="/login" method="POST">
        <div class="form-group">
          <div class="input-group mb-2">
            <div class="input-group-prepend">
              <span class="input-group-text"><i class="fas fa-user"></i></span>
            </div>
            <input type="username" name="username" class="form-control {{#if errors.username }} is-invalid {{/if}}" placeholder="Email"
              value="{{ user.username }}">
            {{#if errors.username }} <div class="invalid-feedback">{{ errors.username }}</div> {{/if}}
          </div>
        </div>
        <div class="form-group">
          <div class="input-group mb-2">
            <div class="input-group-prepend">
              <span class="input-group-text"><i class="fas fa-key"></i></span>
            </div>
            <input type="password" name="password" class="form-control {{#if errors.password }} is-invalid {{/if}}" placeholder="password"
              value="{{ user.password }}">
            {{#if errors.password }} <div class="invalid-feedback">{{ errors.password }}</div> {{/if}}
          </div>
        </div>
        <div class="actions-group">
          <button type="submit" class="btn btn-primary btn-block">Login</button>
        </div>
        <div class="col-12 text-center py-2">You don't have an account? <a href="../register" class="font-weight-bold"><u>Sign up</u></a></div>
      </form>
    </div>
  </div>
</div>