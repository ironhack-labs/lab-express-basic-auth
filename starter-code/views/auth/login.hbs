<img src="/images/rawpixel-558599-unsplash.jpg" id="bg2">
<div class="container">
    <div class="container">
        <form class="form-signin text-center" action="/auth/login" method="POST">
            <img class="mb-4" src="/images/zoom-button.png" alt="" width="72" height="72">
            <h1 class="h3 mb-3 font-weight-normal">Login page</h1>
            <input type="text" name="email" class="form-control {{#if errors.email}} is-invalid {{/if}}" placeholder="Email adress"
                value="{{user.email}}">
            {{#if errors.email }} <div class="invalid-feedback">{{ errors.email }}</div> {{/if}}
            <input type="password" name="password" class="form-control {{#if errors.password}} is-invalid {{/if}}"
                placeholder="password">
            {{#if errors.password }} <div class="invalid-feedback">{{ errors.password }}</div> {{/if}}
            <button class="btn btn-lg btn-success btn-block" type="submit">Register</button>
            <p class="mt-2">Not registered yet? <a href="/auth/register">click here</a></p>
        </form>
    </div>
</div>