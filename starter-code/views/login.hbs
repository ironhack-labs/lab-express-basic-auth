<form action="/login" method="post">

  <label for="">Username</label>
  <input type="text" name="username" maxlength="12" required="required">

  <label for="">Password</label>
  <input type="password" name="password" minlength="6" maxlength="12" required="required">

  <button>Log In</button>

</form>

{{#if errorMessage}}
<p>{{errorMessage}}</p>
{{/if}}
<h4>Don't have an account? <a href="/signup">Sign Up!</a></h4>