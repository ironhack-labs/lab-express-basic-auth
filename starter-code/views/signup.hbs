<div class="container">

    <h1>Our sign up page</h1>

    <div class="row justify-content-center">

        <div class="col-md-8">

            <form action="/signup" method="POST">
                <div class="form-group">
                    <label for="field1">Username</label>
                    <input type="text" class="form-control" id="field1" name="username">
                </div>
                <div class="form-group">
                    <label for="field2">Password</label>
                    <input type="password" class="form-control" id="field2" name="password">
                </div>

                <button type="submit" class="btn btn-dark">Register</button>

                {{#if errorMessage}}
                <p class="error">{{errorMessage}}</p>
                {{/if}}
            </form>

        </div>
    </div>
</div>