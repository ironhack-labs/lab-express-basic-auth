<h2>Sign Up</h2>
<form action="/signup" method="POST">
    <label for="username">Username</label>
    <input type="text" name="username">
    <label for="password">Password</label>
    <input type="password" name="password">
    <input type="submit">
</form>

{{#if errorMessage}}
    <p>{{errorMessage}}</p>
{{/if}}