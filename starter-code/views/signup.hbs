<form action="/signup" method="post">

  <label for="">Username:</label>
  <input type="text" name="username" maxlength="12" required="required">

  <label for="">Password:</label>
  <input id="myPassword" type="password" name="password" minlength="6" maxlength="12" required="required">

  <button>Sign Up</button>

</form>

{{#if errorMessage}}
<p>{{errorMessage}}</p>
{{/if}}
<h4>Already have an account? <a href="/login">Log In!</a></h4>