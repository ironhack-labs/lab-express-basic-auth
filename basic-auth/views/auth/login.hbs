<h1>Login</h1>

<form method="POST" action="/auth/login">

  <div class="field" >
    <label>Name</label>
    <input type="text" name="username"/>
  </div>

  <div class="field" >
    <label>Password</label>
    <input type="password" name="password"/>
  </div>

  <div class="field submit">
    <button type="submit">Save</button>
  </div>
</form>