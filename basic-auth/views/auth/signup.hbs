<h1>Sign up</h1>

<form method="POST" action="/auth/signup">

  <div class="field" >
    <label>Name</label>
    <input type="text" name="username"/>
  </div>

  <div class="field" >
    <label>Password</label>
    <input type="password" name="password"/> {{!-- type="password" hiddes password when typing --}}
  </div>

  <div class="field submit">
    <button type="submit">Save</button>
  </div>
</form>