<form action="/signup" method="POST">
  <h2>Sign Up</h2>
  <div class="form-group">
    <label for="username">User Name</label>
    <input type="text" class="form-control" name="username" placeholder="Enter Name">
  </div>
  <div class="form-group">
    <label for="password">Password</label>
    <input type="password" id="myNewPassword" class="form-control" name="password" placeholder="Password">
  </div>
  {{#if errorMessage}}
  <div class="invalid-feedback" style="display:block">{{ errorMessage }}</div>
  {{/if}}
  <button type="submit" class="btn btn-primary">Submit</button>
</form>